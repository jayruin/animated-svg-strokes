{
  "type": "module",
  "devDependencies": {
    "typescript": "latest",
    "parcel": "latest",
    "eslint": "latest",
    "@typescript-eslint/parser": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "eslint-config-prettier": "latest",
    "prettier": "latest"
  },
  "scripts": {
    "check": "tsc --noEmit",
    "lint": "eslint src",
    "pretty": "prettier src --check",
    "prettify": "prettier src --write",
    "build": "parcel build",
    "reset": "git clean -fdx"
  },
  "targets": {
    "strokes": {
      "context": "browser",
      "distDir": "dist",
      "isLibrary": true,
      "optimize": true,
      "outputFormat": "esmodule",
      "source": "src/strokes.ts",
      "sourceMap": false
    }
  }
}
