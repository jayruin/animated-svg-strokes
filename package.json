{
  "type": "module",
  "devDependencies": {
    "typescript": "latest",
    "parcel": "latest",
    "eslint": "latest",
    "@typescript-eslint/parser": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@stylistic/eslint-plugin": "latest"
  },
  "scripts": {
    "types": "tsc --noEmit",
    "lint": "eslint src",
    "style": "eslint src --no-eslintrc --config .eslintrc.styles.json",
    "format": "eslint src --no-eslintrc --config .eslintrc.styles.json --fix",
    "build": "parcel build",
    "reset": "git clean -fdx"
  },
  "targets": {
    "strokes": {
      "context": "browser",
      "distDir": "dist",
      "isLibrary": true,
      "optimize": true,
      "outputFormat": "esmodule",
      "source": "src/strokes.ts",
      "sourceMap": false
    }
  }
}
